<!DOCTYPE html>
<html ng-app="hirikata">
    <head>
        <title>HiriKata</title>
        @Styles.Render("~/Content/css")
    </head>
    <body>
        <div class="nav">
            <div class="main">
                <a href="/#/">
                    <span class="logo">
